<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/outcome_img"
        android:layout_width="@dimen/Circle_width"
        android:layout_height="@dimen/Category_height"
        android:layout_marginTop="20dp"
        android:src="@drawable/category_travel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outcome_img"
        android:gravity="center"
        android:text="Name"
        android:textSize="@dimen/NameCategory"
        android:layout_centerHorizontal="true"
        android:id="@+id/outcome_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:id="@+id/Outcome_id_txt"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/outcome_txt"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NameId"
        android:id="@+id/outcome_name_id"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>