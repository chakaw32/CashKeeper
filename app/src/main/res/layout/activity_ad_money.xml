<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peera_000.cashkeeper.AdMoney">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbarAdmoney"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <EditText
            android:id="@+id/edtAdmoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:hint="0THB"
            android:inputType="number"
            android:paddingRight="15dp"
            android:textSize="30dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TabAdMoney"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/toolbarAdmoney"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/VPAdmoney"
        android:layout_below="@+id/TabAdMoney"
        >

    </android.support.v4.view.ViewPager>

</RelativeLayout>
